// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int       @id @default(autoincrement())
  firstName      String?
  lastName       String?
  role       String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  accounts Account[]
}

model Account {
  id                Int     @id @default(autoincrement())
  type              String
  provider          String
  providerAccountId String
  role       String?
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  @@unique([provider, providerAccountId])
}

model MasterCategory {
  categoryId   Int    @id @default(autoincrement())
  categoryName String
}

model MasterFeature {
  featureId   Int    @id @default(autoincrement())
  featureName String
}

model Hotels {
  hotelId     Int      @id @default(autoincrement())
  title       String?
  price       Decimal? @db.Decimal(65, 2)
  description String?
  tagLine     String?
  tag         String?
  beds        Int?
  bathRooms   Int?
  garages     Int?
  person      Int?
  area        Decimal? @db.Decimal(65, 2)
  propertyId  Int?
  type        String?
  bedRooms    Int?
  parking     Int?
  dimensions  String?
  yearBuild   Int?
  image       String?
  videoLink   String?
  address     String?
  zipCode     String?
  Phone       String?
  fax         String?
  email       String?
  website     String?

  categoryId Int?
  features   String?
}
model Restaurant {
  restaurantId     Int      @id @default(autoincrement())
  price       Decimal? @db.Decimal(65, 2)
  description String?
  image       String?
  email       String?
  website     String?
  parking     Int?
  title       String?
  Phone       String?

}
model Cafe {
  cafeId     Int      @id @default(autoincrement())
  price       Decimal? @db.Decimal(65, 2)
  description String?
  image       String?
  email       String?
  website     String?
  parking     Int?
  title       String?
  Phone       String?

}

